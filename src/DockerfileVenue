# Use the official ASP.NET Core runtime as a base for final app
FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
WORKDIR /app
EXPOSE 8080
EXPOSE 8081

# Build stage - use Debian-based SDK for gRPC Tools compatibility
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

# Only copy the project files needed
COPY ../SportsData.Venue/SportsData.Venue.csproj SportsData.Venue/
COPY ../SportsData.Core/SportsData.Core.csproj SportsData.Core/

# Restore dependencies
RUN dotnet restore "SportsData.Venue/SportsData.Venue.csproj"

# Now copy the actual source code
COPY ../SportsData.Venue/ SportsData.Venue/
COPY ../SportsData.Core/ SportsData.Core/

# Build the project
WORKDIR /src/SportsData.Venue
RUN dotnet build "SportsData.Venue.csproj" -c $BUILD_CONFIGURATION -o /app/build

# Publish the project
FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "SportsData.Venue.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

# Final runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

ENTRYPOINT ["dotnet", "SportsData.Venue.dll"]
